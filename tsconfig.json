{
  "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types"],
      "allowJs": true,
      "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*"]
}